{
    "manifest_version": 3,
    "name": "Extractor",
    "version": "1.0",
    "description": "Extrait les e-mails, les numéros de téléphone et les liens de réseaux sociaux des pages web.",
    "permissions": [
        "activeTab",
        "scripting",
        "storage"
    ],
    "action": {
        "default_popup": "popup.html",
        "default_icon": {
            "16": "images/icon16.png",
            "128": "images/icon128.png"
        }
    },
    "background": {
        "service_worker": "background.js"
    },
    "content_scripts": [
        {
            "matches": [
                "<all_urls>"
            ],
            "js": [
                "content.js"
            ]
        }
    ],
    "icons": {
        "16": "images/icon16.png",
        "128": "images/icon128.png"
    }
}